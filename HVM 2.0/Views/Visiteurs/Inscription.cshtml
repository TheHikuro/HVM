@model HVM_2._0.Models.Visiteur

@{
    ViewBag.Title = "Inscription";
}

<h2>Inscription</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


<form method="post" action="/Visiteurs/Inscription/">
    <div>
        <div class="form-horizontal" name="creneauxOccup">
            <h4>Visiteur</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label for="l_prenom">Prenom : </label>
                <input type="text" id="i_prenom" name="prenom" />
            </div>
        </div>

        <div class="form-group">
            <label for="l_nom">Nom :</label>
            <input type="text" id="i_nom" name="nom" />
        </div>

        <div class="form-group">
            <label for="l_mail">Mail : </label>
            <input type="text" id="i_mail" name="mail" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
